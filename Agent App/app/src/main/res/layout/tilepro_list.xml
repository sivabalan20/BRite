<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cvPlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle_background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/plname"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Tajmahal"
                android:layout_marginLeft="5sp"
                android:textSize="12dp"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/pimage"
                android:textColor="@color/colorBlack"
                android:maxLines="1"
                android:ellipsize="end"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/pimage"
                android:src="@drawable/hanger"
                android:layout_alignParentRight="true"
                android:id="@+id/proselcimage"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5pt"
                android:layout_below="@+id/plcheckbox"
                android:background="@color/colorlightshade" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
