<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aspirantlab.salesagent">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".SplashScreen"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".ApparelsOrderList"
            android:label="@string/title_shirtlist_main"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".CustomerCreate"
            android:label="@string/title_createcus_main"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".CustomerData"
            android:label="@string/title_cusdata_main"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".CustomerList"
            android:label="@string/title_cus_list"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>
        <activity
            android:name=".ProductList"
            android:label="@string/title_product_list"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".TextilesOrderList"
            android:label="@string/title_dhoti_list"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".ApparelsCustomerDetails"
            android:label="@string/title_shirt_order"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".ApparelsOrderDetails"
            android:label="@string/title_shirt_order"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".ApparelsEditOrderDetails"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".TextilesCustomerDetails"
            android:label="@string/title_dhoti_order"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".TextilesOrderDetails"
            android:label="@string/title_dhoti_order"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".TextilesEditOrderDetails"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".ProductView"
            android:label="@string/title_product"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

    </application>

</manifest>